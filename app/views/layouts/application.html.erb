<!DOCTYPE html>
<html>
<head>
  <title>Myproject</title>
  <%= javascript_include_tag 'application' %>
  <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>





<!-- Always shows a header, even in smaller screens. -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title">My Project</span>
      <% if admin_user_signed_in? %>
      <div class="mdl-layout-spacer"></div>
      <!-- Navigation. We hide it in small screens. -->
      <nav class="mdl-navigation mdl-layout--large-screen-only">
        <%= link_to 'ログアウト', destroy_admin_user_session_path, {:class => "mdl-navigation__link", :method => "delete" } %>
        <%= link_to 'User', root_path, {:class => "mdl-navigation__link"} %>
        <a class="mdl-navigation__link" href="">Link</a>
        <a class="mdl-navigation__link" href="">Link</a>
      </nav>
      <% end %>
    </div>
  </header>


<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer">

<% if admin_user_signed_in? %>
  <div class="mdl-layout__drawer">

    <div class="login-info-side">
      <p>こんにちは</p>
      <p><strong><%= current_admin_user.email %></strong>さん。</p>
    </div>

    <span class="mdl-layout-title">My Project</span>
    <nav class="mdl-navigation">
      <a class="mdl-navigation__link" href="">Link</a>
      <a class="mdl-navigation__link" href="">Link</a>
      <a class="mdl-navigation__link" href="">Link</a>
      <a class="mdl-navigation__link" href="">Link</a>
    </nav>
  </div>
<% end %>
  <main class="mdl-layout__content" <% unless admin_user_signed_in? %> style="margin: 0 auto;"<% end %>>
        <%= yield %>
  </main>
</div>

</div>



</body>
</html>
